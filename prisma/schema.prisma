generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  name         String?
  wallet       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastLogin    DateTime?
  links        Link[]
  image        String?
}

model Link {
  id               String   @id @default(cuid())
  accountId        String
  currency         String
  email            String
  name             String?
  amount           Decimal? @db.Decimal(15,2)
  memo             String?
  expires          DateTime?
  maxPayments      Int?
  userId           String?
  user             User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  payments         Payment[]
}

model Payment {
  transactionId   String @id
  linkId          String
  link            Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  @@index([linkId])           // (optional) speeds up queries by link
  createdAt        DateTime @default(now())
}

model Survey {
    id         String @id @default(cuid())
    answer1    String?
    answer2    String?
    answer3    String?
    answer4    String?
    answer5    String?
    name       String?
    consent    Boolean
    createdAt  DateTime @default(now())
}
